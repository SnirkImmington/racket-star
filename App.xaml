<Application x:Class="RacketSharp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <!-- Base text box style: outlining and borders. -->
        <Style x:Key="BaseTextBox" TargetType="RichTextBox">
            <Setter Property="IsInactiveSelectionHighlightEnabled" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <!-- Code box: font and font size. -->
        <Style x:Key="CodeBox" TargetType="RichTextBox" BasedOn="{StaticResource BaseTextBox}">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <!-- Input box -->
        <Style x:Key="InputCodeBox" TargetType="RichTextBox" BasedOn="{StaticResource CodeBox}">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <!-- History box -->
        <Style x:Key="HistoryBox" TargetType="RichTextBox" BasedOn="{StaticResource CodeBox}">
            
        </Style>
    </Application.Resources>
</Application>